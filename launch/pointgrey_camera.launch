<launch>

  <arg name="manager"         default="" />
  <!-- <arg name="serial"          default="13460351" /> -->
  <arg name="serial"          default="13344929" />
  <arg name="camera_info_url" default="" />
  <arg name="camera_name"     default="pointgrey" />
  <arg name="frame_id"        default="pointgrey_optical_frame" />
  <arg name="output"          default="screen" />
  <arg name="remapped_tf"     default="/tf" />

  <!-- This will take care of lauching a pointgrey camera nodelet with an associated image_proc debayer node. -->
  <group ns="$(arg camera_name)" >
    <node pkg="nodelet" type="nodelet" name="pg_nodelet" output="$(arg output)" args="load pointgrey_camera_driver/PointGreyCameraNodelet $(arg manager)" >
      <param name="serial" value="$(arg serial)" />
      <param name="camera_info_url" value="$(arg camera_info_url)" />
      <param name="frame_id" value="$(arg frame_id)" />
      <remap from="/tf" to="$(arg remapped_tf)" />
    </node>
    <!-- <node pkg="nodelet" type="nodelet" name="ip_nodelet" output="$(arg output)" args="load image_proc/debayer $(arg manager)" > -->
    <!-- </node>   -->
    <!-- Debayer node not working? -->
  </group>

</launch>
